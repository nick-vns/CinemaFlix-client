{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "standard-react",
    "standard",
    "plugin:json/recommended"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "json"],
  "rules": {
    "jsx-quotes": ["error", "prefer-single"],
    "react/jsx-handler-names": 0,
    "react/display-name": 0,
    "import/no-unresolved": 0,
    "import/no-absolute-path": 0,
    "no-underscore-dangle": [
      "error",

      {
        "allow": [
          "_id",
          "_ensureIndex",
          "_verifyEmailToken",
          "_resetPasswordToken",
          "_name",
          "_schema"
        ]
      }
    ],
    "react/prop-types": 0
  }
}
